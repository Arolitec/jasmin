[Unit]
Description=Jasmin SMS Gateway
Requires=network.target jasmin-interceptord.service
After=network.target

[Service]
SyslogIdentifier=jasmind
PIDFile=/run/jasmind.pid
User=jasmin
Group=jasmin
ExecStart=/usr/local/bin/jasmind.py --username jsadmin --password jspasswd --enable-interceptor-client

[Install]
WantedBy=multi-user.target
